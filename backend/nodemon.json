{
  "watch": [
    "controllers",
    "models", 
    "routes",
    "middleware",
    "utils",
    "config",
    "Server.js"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules",
    "*.test.js",
    "*.spec.js"
  ],
  "delay": 1000,
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": true
}
